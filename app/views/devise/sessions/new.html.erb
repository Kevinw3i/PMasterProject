<% token_storage %>
<section class="hero">
  <div class="hero-body">
    <div class="container sign_in_page">
      <h2 class="subtitle">登入</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label "信箱" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "請填寫您的信箱", class: "input is-success" %>
        </div>

        <div class="field">
          <%= f.label "密碼" %>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "請輸入您的密碼", class: "input is-success" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field sign-in-checkbox">
            <%= f.check_box :remember_me, class: "item-label" %>
            <%= f.label "記住我的信箱" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "我要登入", class: "sign-in-submit" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</section>
