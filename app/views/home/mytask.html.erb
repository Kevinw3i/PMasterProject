                  <li>沒有資料</li>
                <% end %>
              </ul>
            </div>

            <div class="mytask-type finish is-removed-for-mytask" status="finish">
              <ul>
                <% if @done != [] %>
                  <% @done.each do |done| %>
                    <li><%= done.name %></li>
                  <% end %>
                <% elsif %>
                  <li>沒有資料</li>
                <% end %>
              </ul>
            </div>

