$("#post-id-<%= @post.id %>-be-liked-counts").val("")
$("#post-id-<%= @post.id %>-be-liked-counts").html("<%= j render('posts/partials/likePost') %>")

<% if @current_user.post_likes.find_by(post_id: @post.id) %>
  $("#thumbs-id-<%= @post.id %>").addClass("fas")
  $("#thumbs-id-<%= @post.id %>").removeClass("far")
  $("#thumbs-id-<%= @post.id %>").text(' Liked')
<% else %>
  $("#thumbs-id-<%= @post.id %>").addClass("far")
  $("#thumbs-id-<%= @post.id %>").removeClass("fas")
  $("#thumbs-id-<%= @post.id %>").text(' Like')
<% end %>